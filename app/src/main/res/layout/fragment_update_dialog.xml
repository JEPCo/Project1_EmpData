<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="10dp"
             tools:context=".UpdateDialogFragment">

    <TextView
            android:text="الرقم الوظيفي مدخل مسبقا هل تود تحديث بياناته؟"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView_update"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center_horizontal">
        <Button
                android:text="نعم"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button_yes_update"/>
        <Button
                android:text="لا"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button_no_update"/>
    </LinearLayout>
</LinearLayout>